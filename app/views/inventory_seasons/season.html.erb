<%= provide(:title, "Đợt Kiểm Kê") %>
<%= provide(:page, "Đợt Kiểm Kê") %>
<div id="page-wrapper">
        <div class="container-fluid">
            <div class="row" id="main" >
                <div class="col-sm-12 col-md-12 well" id="content">

                    <div class="col-sm-10">
                        <div class="form-area">  
                                 <%= form_for @inventory_season, url:seasons_path ,html: {class: "form-horizontal",multipart: true} do |f| %>
                                  <div class="form-group">
                                      <div class="col-sm-12">
                                         <label>Tên đợt kiểm kê</label>
                                         <%= f.text_field :ten,class: "form-control",id: "name",placeholder: "Điền tên đợt" %>
                                      </div>
                                  </div>
                                  <div class="form-group">
                                     <div class="col-sm-12" style="margin-top: 10px;">
                                       <%= f.submit "Thêm đợt", class: "btn btn-primary pull-right",id: "btnMaterialInput" %>
                                     </div>
                                  </div>
                                <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
 </div>
 <div id="page-wrapper">
  <div class="container-fluid">
    <div class="row" id="main" >
     <div class="col-sm-12 col-md-12 well" id="content">
      <div class="text-inline">
      </div>
      <div class="table-responsive">          
        <table class="table table-bordered table-hover">
          <thead id="table-header">
            <tr>
              <th class="text-center">#</th>
              <th class="text-center">Tên</th>
              <th class="text-center">Hành động</th>
            </tr>
          </thead>
          <tbody>
          <% if @inventory_season1.present? %>
          <% @inventory_season1.each do |iv| %>
          <tr>
          <td width="10%" class="text-center"><%= iv.id_dot %></td>
          <td width="70%" class="text-center"><%= iv.ten %></td>
          <td width="20%" class="text-center"><%= button_to "delete",  inventory_season_path(:id => iv.id), :method => :delete %></td>
          </tr>
          <% end %>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</div>