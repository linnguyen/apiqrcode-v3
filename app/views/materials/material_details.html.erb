<%= provide(:title, "Thống Kê") %>
<div id="page-wrapper">
        <div class="container-fluid">
            <div class="row" id="main" >
                <div class="col-sm-12 col-md-12 well" id="content">
                    <div class="text-inline">
                    <label>Mã Đề Xuất Phôi Liệu:</label>
                    <p>DXPL_<%= @ma_dxpl %></p>
                    </div>
                    <div class="table-responsive">          
                        <table class="table table-bordered table-hover">
                            <thead id="table-header">
                               <tr>
                                <th rowspan="2" id="single-header" >#</th>
                                <th rowspan="2" id="single-header">Tên Vật Tư, Phôi Liệu</th>
                                <th rowspan="2" id="single-header">Qui Cách</th>
                                <th rowspan="2" id="single-header">Chủng Loại</th>
                                <th rowspan="2" id="single-header">Xuất Xứ</th>
                                <th rowspan="2" id="single-header">Đơn Vị Tính</th>
                                <th colspan="3" style="text-align: center; vertical-align: middle;">Số Lượng</th>
                              </tr>
                              <tr>
                                <td>Tổng Số</td>
                                <td>Đã Có</td>
                                <td>Mua Mới</td>
                              </tr>
                           </thead>
                           <tbody>
                           <% i=0 %>
                           <% if @chitietdexuatphoilieu.present? %>
                               <% @chitietdexuatphoilieu.each do |c| %>
                               <tr>
                                   <td><%= i+=1 %></td>
                                   <td><%= c.ten_vat_tu_phoi_lieu %></td>
                                   <td><%= c.qui_cach %></td>
                                   <td><%= c.chung_loai %></td>
                                   <td><%= c.xuat_xu %></td>
                                   <td><%= c.don_vi_tinh %></td>
                                   <td><%= c.tong_so %></td>
                                   <td><%= c.da_co %></td>
                                   <td><%= c.mua_moi %></td>
                               </tr>
                               <% end %>
                           <% else %>
                                <h4>Không tìm thấy dữ liệu</h4>
                            <% end %>
                          </tbody>
                       </table>
                       <%= button_to "Quay lại",admin_materials_path,method: :get, class: "btn btn-primary btn-md pull-left" %>
                   </div>
               </div>
           </div>
    <!-- /.row -->
        </div>
<!-- /.container-fluid -->
</div>
