<% provide(:title,"Tạo Mã QR") %>
<div id="page-wrapper">
        <div class="container-fluid">
            <div class="row" id="main" >
                <div class="col-sm-4 well" id="inputText">
                      <%= form_tag(qrcodes_path,id:'form_qr') do |f| %>
                      <div class="form-group">
                      <%= text_field_tag(:text,nil,class: "form-control",id: "code_input",  oninput: "myfunc()") %>
                      </div>
                      <div class="form-group">
                      <%= submit_tag("Generate",:class => "btn btn-large btn-primary")%>
                      </div>
                      <% end %>
                </div>
                <div class="col-sm-4 well" id="result">
                     <h3>Result</h3>
                     <div class="form-group">
                      <table class="qr-code">
                        <% if @qr.present? %>
                          <% @qr.modules.each_index do |x| %>
                             <tr>
                               <% @qr.modules.each_index do |y| %>
                               <% if @qr.dark?(x,y) %>
                               <td class="black"/>
                               <% else %>
                               <td class="white"/>
                               <% end %>
                               <% end %>
                             </tr>
                           <% end %>
                         <% end %>
                       </table>
                    </div>
                </div>
             </div>
        </div>
</div>
<script>
$(document).on("change","#code_input",function(){
  var periods = $(this).val();
  var text = $("#code_input").val();
  $.ajax({
    type: "POST",
    url: "/qrcodes",
    data: { periods: periods, text: text } 
  });
});

